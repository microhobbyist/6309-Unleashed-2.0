162:/* =========================================================
163:   HOLD LATCH - EXTEND MRDY UNTIL END OF E CYCLE
164:   ========================================================= */
165:
166:HOLD.d  = RUN # (HOLD & !E_rise) ;
167:HOLD.ck = CPUclk ;
168:HOLD.ar = RESET ;
169:HOLD.sp = 'b'0 ;
170:
171:/* =========================================================
172:   OUTPUT
173:   ========================================================= */
