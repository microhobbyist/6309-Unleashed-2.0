108:
109:/* Non-zero WS */
110:WAIT_NZ = WS_NUM0 # WS_NUM1 ;
111:
112:/* Preload = WS * 4 (shift left 2 bits) */
113:LOAD0 = 'b'0 ;
114:LOAD1 = 'b'0 ;
115:LOAD2 = WS_NUM0 ;
116:LOAD3 = WS_NUM1 ;
117:
118:/* =========================================================
119:   RUN CONTROL AND DOWN COUNTER (4 BITS)
120:   ========================================================= */
121:
122:CNT_ZERO = !CNT3 & !CNT2 & !CNT1 & !CNT0 ;
123:
124:/* Load when:
125:   - E rises and WS != 0
126:   - OR WS becomes nonzero while E is high
127:*/
128:LOAD = (E_rise & WAIT_NZ & !RUN) #
129:       (E_sync & WAIT_RISE & !RUN) ;
130:
131:/* RUN while counter not zero */
132:RUN.d  = LOAD # (RUN & !CNT_ZERO) ;
133:RUN.ck = CPUclk ;
134:RUN.ar = RESET ;
135:RUN.sp = 'b'0 ;
136:
137:/* Decrement enable */
138:DEC = RUN & !CNT_ZERO ;
139:
140:/* --------------- 4-bit DOWN COUNTER (CNT3..CNT0) --------------- */
141:
142:CNT0.d = (LOAD & LOAD0) # (!LOAD & (DEC $ CNT0)) ;
143:CNT0.ck = CPUclk ;
144:CNT0.ar = RESET ;
145:CNT0.sp = 'b'0 ;
146:
147:CNT1.d = (LOAD & LOAD1) # (!LOAD & ((DEC & !CNT0) $ CNT1)) ;
148:CNT1.ck = CPUclk ;
149:CNT1.ar = RESET ;
150:CNT1.sp = 'b'0 ;
151:
152:CNT2.d = (LOAD & LOAD2) # (!LOAD & ((DEC & !CNT1 & !CNT0) $ CNT2)) ;
153:CNT2.ck = CPUclk ;
154:CNT2.ar = RESET ;
155:CNT2.sp = 'b'0 ;
156:
157:CNT3.d = (LOAD & LOAD3) # (!LOAD & ((DEC & !CNT2 & !CNT1 & !CNT0) $ CNT3)) ;
158:CNT3.ck = CPUclk ;
159:CNT3.ar = RESET ;
160:CNT3.sp = 'b'0 ;
161:

